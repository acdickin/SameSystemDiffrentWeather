<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @{
        var bandName = "Same System Diffrent Weather";
    }
    <title>@ViewBag.Title -@bandName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="@Url.Content("~/Content/Weather.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="nav weather-header" >
        @Html.ActionLink(bandName.ToUpper(), "Index", "Home", new { area = "" }, new { @class = "navbar-weather-brand" })
    </div>
    @RenderBody()
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
